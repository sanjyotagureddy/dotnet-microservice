{
  "$schema": "http://json.schemastore.org/template",
  "author": "Travis Chau",
  "classifications": [ "WebAPI", "Web", "MVC" ],
  "identity": "DotNet.Microservice",
  "sourceName": "DotNet.Microservice",
  "name": "DotNet Microservice template",
  "shortName": "mymicroservice",
  "tags": {
	"language" : "c#",
	"type" : "project"
  },
  "preferNameDirectory" : true,
  "symbols": {
    "Framework":{
        "type": "parameter",
        "description": "The target framework for the project.",
        "datatype" : "choice",
        "choices": [
            {
                "choice": "net5.0"
            },{
                "choice": "net6.0"
            },{
                "choice": "net7.0"
            }
        ],
        "defaultValue": "net7.0",
        "replaces": "{TargetFramework}"
    }
  }
}